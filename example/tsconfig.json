{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "allowJs":true,
        "allowSyntheticDefaultImports":true
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}
